<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_checked="true"><shape>

        <corners
            android:bottomRightRadius="17dp"
            android:bottomLeftRadius="17dp"
            android:topLeftRadius="17dp"
            android:topRightRadius="17dp"/>

        <solid android:color="#2F4C6A" />

        <stroke android:width="1dp" android:color="#2F4C6A" />
    </shape></item>
    <item android:state_checked="false"><shape android:shape="rectangle">

        <corners
            android:bottomRightRadius="17dp"
            android:bottomLeftRadius="17dp"
            android:topLeftRadius="17dp"
            android:topRightRadius="17dp"/>

        <solid android:color="#F4F8FD" />

        <stroke android:width="1dp" android:color="#F4F8FD" />
    </shape></item>

</selector>