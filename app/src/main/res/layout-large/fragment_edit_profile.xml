<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"

                                             android:orientation="vertical"
                                             android:weightSum="2"
                                             tools:context="com.app.tv.mediacast.FragmentEditProfile">


    <ImageView
        android:id="@+id/authorization_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/textView_edit_user_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/edit_user_description"

        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/editText_edit_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/editText_edit_user_name"
        app:layout_constraintTop_toTopOf="@+id/guideline18"/>

    <EditText
        android:id="@+id/editText_edit_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/edit_user_name"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_edit_user_description"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"/>


    <EditText
        android:id="@+id/editText_edit_user_surname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/edit_user_surname"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/editText_edit_user_name"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/editText_edit_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/editText_edit_user_name"/>


    <EditText
        android:id="@+id/editText_edit_user_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/edit_user_phone"
        android:inputType="phone"
        app:layout_constraintRight_toRightOf="@+id/editText_edit_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/editText_edit_user_name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_edit_user_surname"/>

