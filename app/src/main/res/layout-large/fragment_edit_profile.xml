    <Button
        android:id="@+id/button_edit_user_confirm"
        style="@style/GrayButtonStyle"

        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/edit_user_confirm"
        app:layout_constraintRight_toRightOf="@+id/editText_edit_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/editText_edit_user_name"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_edit_user_phone"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline18"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="124dp"
        tools:layout_editor_absoluteX="0dp"/>


