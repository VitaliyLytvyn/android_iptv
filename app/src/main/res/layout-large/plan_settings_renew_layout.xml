<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/ic_magician_2"
        android:id="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/guideline16"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline16"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="90dp"
        tools:layout_editor_absoluteX="0dp"/>

    <TextView
        android:text="@string/plan_settings_renew_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textSize="22sp"
        tools:textSize="@dimen/text_size_title"/>

    <TextView
        android:text="@string/plan_settings_renew_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintLeft_toLeftOf="@+id/guideline79"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/guideline80"
        android:gravity="center"/>

    <Button
        android:text="@string/plan_settings_renew_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPickNewPlan"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        style="@style/TransparentButtonStyle"
        app:layout_constraintLeft_toLeftOf="@+id/guideline79"
        app:layout_constraintRight_toLeftOf="@+id/guideline80"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline79"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="200dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline80"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="600dp"/>

</android.support.constraint.ConstraintLayout>



</ScrollView>