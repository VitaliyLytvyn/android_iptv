<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.InfoCreateAccount"
    android:background="@drawable/gradient_dark3">

    <ImageView
        android:layout_width="223dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/logo_white"
        android:id="@+id/imageViewLogo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@color/background_grey_info_table"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_restore_email"
            android:background="@drawable/my_custom_edit_text"
            android:textColor="@color/text_table_dark"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/button_restore_email"
            app:layout_constraintRight_toRightOf="@+id/button_restore_email"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>

        <!--<com.facebook.login.widget.LoginButton-->

        <Button
            android:text="@string/restore_pass"
            style="@style/BlueInfoButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_restore_email"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_restore_email"
            android:layout_marginTop="24dp"/>
        <!--style="@style/BlueInfoButtonStyle"-->

        <TextView
            android:text="@string/restore_pass_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintRight_toRightOf="@+id/button_restore_email"
            app:layout_constraintLeft_toLeftOf="@+id/button_restore_email"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="@string/restore_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>

