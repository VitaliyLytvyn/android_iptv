<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="fill_parent"
                                             android:layout_height="fill_parent"

                                             tools:context="com.app.tv.mediacast.FragmentChangePassword"
                                             android:weightSum="2"
                                             android:orientation="vertical">


    <ImageView
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="16dp"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/editText_change_pass_new_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/change_pass_new_password"
        android:inputType="textPassword"

        app:layout_constraintTop_toTopOf="@+id/guideline14"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"/>


    <EditText
        android:id="@+id/editText_change_pass_repeat_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/change_pass_repeat_password"
        android:inputType="textPassword"
        tools:layout_conversion_absoluteX="99dp"
        tools:layout_conversion_absoluteY="479dp"
        tools:layout_conversion_absoluteWidth="400dp"
        tools:layout_conversion_absoluteHeight="42dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_change_pass_new_pass"
        app:layout_constraintRight_toRightOf="@+id/editText_change_pass_new_pass"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_change_pass_new_pass"/>

    <Button
        android:id="@+id/button_change_pass_confirm"
        style="@style/GrayButtonStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/change_pass_button_title"
        tools:layout_conversion_absoluteX="200dp"
        tools:layout_conversion_absoluteY="569dp"
        tools:layout_conversion_absoluteWidth="199dp"
        tools:layout_conversion_absoluteHeight="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_change_pass_new_pass"
        app:layout_constraintRight_toRightOf="@+id/editText_change_pass_new_pass"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_change_pass_repeat_pass"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="248dp"
        tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>
