<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"

                                             android:orientation="vertical"
                                             android:weightSum="3"
                                             tools:context="com.app.tv.mediacast.FragmentHelp">


    <ImageView
        android:id="@+id/relativeLayout2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:paddingBottom="14sp"

        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>


    <TextView
        android:id="@+id/textview_help_mail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/help_email_title"

        android:textSize="16sp"
        tools:layout_conversion_absoluteX="100dp"
        tools:layout_conversion_absoluteY="176dp"
        tools:layout_conversion_absoluteWidth="183dp"
        tools:layout_conversion_absoluteHeight="38dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline3"/>


    <TextView
        android:id="@+id/textView_help_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/abc_text_size_title_material"
        tools:layout_conversion_absoluteX="142dp"
        tools:layout_conversion_absoluteY="471dp"
        tools:layout_conversion_absoluteWidth="98dp"
        tools:layout_conversion_absoluteHeight="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail13"/>

    <TextView

        android:text="@string/help_description"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView_help_description"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:gravity="center_horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        tools:layout_editor_absoluteY="204dp"
        tools:layout_editor_absoluteX="0dp"/>

    <TextView
        android:text="TextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmail13"
        app:layout_constraintRight_toRightOf="@+id/textview_help_mail_title"
        app:layout_constraintLeft_toLeftOf="@+id/textview_help_mail_title"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_help_mail_title"/>


</android.support.constraint.ConstraintLayout>
