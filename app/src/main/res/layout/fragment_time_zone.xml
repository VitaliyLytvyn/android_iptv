<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.tv.mediacast.FragmentTimeZone"


    >


    <Button
        android:id="@+id/button_timezones"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/timezones_select"
        style="@style/GrayButtonStyle"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/listView_timezones"
        app:layout_constraintRight_toRightOf="@+id/listView_timezones"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/listView_timezones"

        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        style="@style/CustomListView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintBottom_toTopOf="@+id/button_timezones"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"

        android:background="@android:color/transparent"/>

</android.support.constraint.ConstraintLayout>
