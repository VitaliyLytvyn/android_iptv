    <Button
        android:id="@+id/button_edit_user_confirm"
        style="@style/GrayButtonStyle"

        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/edit_user_confirm"
        app:layout_constraintRight_toRightOf="@+id/textView_edit_user_description"
        app:layout_constraintLeft_toLeftOf="@+id/textView_edit_user_description"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_edit_user_phone"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline25"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="26dp"
        tools:layout_editor_absoluteX="0dp"/>

