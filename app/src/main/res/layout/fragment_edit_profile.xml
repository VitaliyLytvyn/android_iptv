<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.app.tv.mediacast.FragmentEditProfile">

    <TextView
        android:id="@+id/textView_edit_user_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/edit_user_description"

        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/guideline25"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/editText_edit_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_user_name"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView_edit_user_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_edit_user_description"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView_edit_user_description"
        android:layout_marginTop="8dp"/>


    <EditText
        android:id="@+id/editText_edit_user_surname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/edit_user_surname"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView_edit_user_description"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_edit_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/textView_edit_user_description"/>


    <EditText
        android:id="@+id/editText_edit_user_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_user_phone"
        android:inputType="phone"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_edit_user_surname"
        app:layout_constraintRight_toRightOf="@+id/textView_edit_user_description"
        app:layout_constraintLeft_toLeftOf="@+id/textView_edit_user_description"/>

