<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.app.tv.mediacast.FragmentTimeZone"
    >


    <Button
        android:id="@+id/button_timezones"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="@string/timezones_select"
        style="@style/GrayButtonStyle"
        app:layout_constraintLeft_toLeftOf="@+id/listView_timezones"
        app:layout_constraintRight_toRightOf="@+id/listView_timezones"
        app:layout_constraintTop_toBottomOf="@+id/listView_timezones"
        />

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/listView_timezones"
        android:divider="@android:color/transparent"
        android:textAlignment="center"
        android:dividerHeight="10sp"
        style="@style/CustomListView"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline33"
        app:layout_constraintRight_toLeftOf="@+id/guideline34"

        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline37"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline33"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="207dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline34"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="414dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline37"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="218dp"
        tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>
