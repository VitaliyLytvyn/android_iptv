<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.InfoCreateAccount"
    android:background="@drawable/gradient_dark3">

    <ImageView
        android:layout_width="223dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/logo_white"
        android:id="@+id/imageViewLogo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@color/background_grey_info_table"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_input_email"
            android:background="@drawable/my_custom_edit_text"
            android:textColor="@color/text_table_dark"
            android:padding="5dp"
            android:hint="@string/create_acc_hint_email"
            app:layout_constraintLeft_toLeftOf="@+id/button_input_email"
            app:layout_constraintRight_toRightOf="@+id/button_input_email"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>

        <!--<com.facebook.login.widget.LoginButton-->

        <Button
            android:text="@string/create_acc_dialog_button"
            style="@style/BlueInfoButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_input_email"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/editText_input_email"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline8"
            app:layout_constraintRight_toLeftOf="@+id/guideline9"/>
        <!--style="@style/BlueInfoButtonStyle"-->

        <TextView
            android:text="@string/create_acc_dialog_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="@+id/button_input_email"
            app:layout_constraintLeft_toLeftOf="@+id/button_input_email"
            app:layout_constraintTop_toTopOf="@+id/guideline74"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline8"
            app:layout_constraintGuide_percent="0.3"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="384dp"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline9"
            app:layout_constraintGuide_percent="0.7"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="896dp"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline74"
            app:layout_constraintGuide_percent="0.15"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="83dp"
            tools:layout_editor_absoluteX="0dp"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="@string/create_acc_dialog_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>



</android.support.constraint.ConstraintLayout>