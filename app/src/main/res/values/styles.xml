<resources>

    <!-- Login application theme. -->

    <style name="CreateAccTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/hint_grey</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/background_1</item>
    </style>

    <style name="CreateAccThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/hint_grey</item>
        <item name="android:windowBackground">@drawable/background_blur</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@drawable/list_item</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_item</item>
        <item name="android:actionBarStyle">@style/MyActionBarSemiTransparentTheme</item>
        <item name="actionBarStyle">@style/MyActionBarSemiTransparentTheme</item>
    </style>

    <style name="MyActionBarSemiTransparentTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black_transparent_dark</item>
        <item name="background">@color/black_transparent_dark</item>
        <!--<item name="android:background">@drawable/action_bar_semi_transparent</item>-->
    </style>

    <style name="PlayerTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="displayOptions">none</item>
    </style>


    <style name="AlertDialogCustom" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue_background</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/dropdown_selector</item>
        <!--<item name="android:textColor">@color/darker_grey</item>-->
    </style>

    <style name="CustomListView">
        <item name="android:background">@drawable/list_item</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <!--INFO-->
    <style name="MyMaterialBlankTheme" parent="Theme.AppCompat.NoActionBar"/>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"/>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/text_table_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:windowBackground">@drawable/background_1</item>
        <item name="android:textColorAlertDialogListItem">@color/text_table_dark</item>
    </style>

    <style name="InfoCreateAccTheme" parent="MyMaterialTheme.Base">
        <item name="colorControlNormal">@color/text_gray</item>
        <item name="colorControlActivated">@color/text_gray</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <!--<item name="android:tit">@color/black</item>-->
        <item name="android:windowBackground">@drawable/background_1</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/text_table_dark</item>
    </style>

    <style name="TransparentButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/button_transparent</item>
    </style>

    <style name="SemiTransparentButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/transparent_button_selector</item>
    </style>

    <style name="BlueInfoButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/blue_info_button_selector</item>
    </style>

    <style name="BluePayButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/blue_pay_button_selector</item>
    </style>

    <style name="BlackInfoButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/black_info_button_selector</item>
    </style>

    <style name="GrayButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/gray_button_selector</item>
    </style>

    <style name="GreenButtonStyle" parent="@style/Button">
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:textColor">@color/green</item>
    </style>


    <style name="MyTableTheme" parent="MyMaterialTheme.Base">
        <item name="android:textColor">@color/text_table_dark</item>
    </style>

    <style name="EditTextHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="spinner_style">
    <item name="android:background">@drawable/spinner_bg</item>
    <item name="android:layout_marginLeft">3dp</item>
    <item name="android:layout_marginRight">3dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <!--<item name="android:paddingLeft">8dp</item>-->
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    </style>


</resources>
